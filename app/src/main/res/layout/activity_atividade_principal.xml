<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Controle.AtividadePrincipal">

    <TextView
        android:id="@+id/txtLembrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <!--android:id="@+id/btnCadastrarCurso"
    android:text="Cadastrar Curso"
    android:onClick="cadastrarCurso"-->

    <!--android:layout_below="@+id/btnCadastrarCurso"
        android:layout_centerHorizontal="true"-->

    <Button
        android:id="@+id/btnAdicionarLembrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtLembrete"
        android:text="Adicionar Lembrete" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAdicionarLembrete"
        android:layout_marginTop="173dp"
        android:layout_toEndOf="@+id/btnAdicionarLembrete" />
        android:onClick="adicionarLembrete">


</RelativeLayout>

